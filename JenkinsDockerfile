FROM jenkins/jenkins:lts
USER root

# 1. Mise à jour et installation des outils de base nécessaires
# On installe lsb-release qui est requis pour détecter la version de Debian
RUN apt-get update -qq \
    && apt-get install -qqy apt-transport-https ca-certificates curl gnupg2 lsb-release

# 2. Ajout de la clé de sécurité officielle de Docker (Méthode moderne)
RUN mkdir -p /etc/apt/keyrings \
    && curl -fsSL https://download.docker.com/linux/debian/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg

# 3. Ajout du dépôt Docker officiel dans la liste des sources
RUN echo \
  "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/debian \
  $(lsb_release -cs) stable" | tee /etc/apt/sources.list.d/docker.list > /dev/null

# 4. Installation de Docker (La version la plus récente, pas la 17.12 !)
RUN apt-get update -qq \
    && apt-get install -y docker-ce docker-ce-cli containerd.io

# Retour à l'utilisateur jenkins (bonne pratique, sinon tout tourne en root)
# Si ton tuto demande de rester en root, tu peux commenter cette ligne.
# USER jenkins
